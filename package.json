{
  "name": "buildlink-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@otplib/preset-default": "^12.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "firebase": "^12.5.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "prebuild": "node -e \"const fs=require('fs'),p=require('path');const pub=p.join(process.cwd(),'public');if(!fs.existsSync(pub))fs.mkdirSync(pub,{recursive:true});const idx=p.join(pub,'index.html');if(!fs.existsSync(idx))fs.writeFileSync(idx,'<!DOCTYPE html><html lang=\\\"en\\\"><head><meta charset=\\\"utf-8\\\" /><meta name=\\\"viewport\\\" content=\\\"width=device-width,initial-scale=1\\\" /><link rel=\\\"manifest\\\" href=\\\"%PUBLIC_URL%/manifest.json\\\" /><title>BuildLink</title></head><body><noscript>You need to enable JavaScript to run this app.</noscript><div id=\\\"root\\\"></div></body></html>');const mf=p.join(pub,'manifest.json');if(!fs.existsSync(mf))fs.writeFileSync(mf,JSON.stringify({short_name:'BuildLink',name:'BuildLink',icons:[],start_url:'.',display:'standalone'},null,2));\"",
    "build": "npm run tailwind:build && react-app-rewired build",
    "tailwind:build": "sh -c '[ -f ./src/tailwind.css ] && tailwindcss -i ./src/tailwind.css -o ./src/tailwind-output.css --minify || (mkdir -p ./src && echo \"/* Tailwind CSS - placeholder */\" > ./src/tailwind-output.css && echo \"Skipped Tailwind build - tailwind.css not found\")'",
    "tailwind:watch": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind-output.css --watch",
    "firebase:seed": "tsx scripts/initFirestore.js",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.13"
  }
}
